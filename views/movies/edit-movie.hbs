<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Edit movie</h2>
            <hr>
            <form action="/movies/{{movie.id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{movie.title}}">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{movie.genre}}">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{movie.plot}}">
                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <select name="cast" class="form-select" multiple="multiple" aria-label="Disabled select example">
                        {{#each celebData}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Edit Movie</button>

            </form>

        </div>
    </div>
</div>