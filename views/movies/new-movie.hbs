<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Create a new movie</h2>
            <hr>
            <form action="/movies/create" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <select name="cast" class="form-select" multiple="multiple" aria-label="Disabled select example">
                        {{#each celebritiesInfo}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Create Movie</button>

            </form>

        </div>
    </div>
</div>